	<img src="/assets/images/tour2-design-bgnw.png" class="tour2-design-bgnw" alt="">
	<div class="container" style="padding: 40px 0px;">
		<div class="row" style="margin-top: 30px;">
			<div class="col-md-12" style="background-color: #dcdcdc;">
				<div id="accordion" role="tablist" aria-multiselectable="true">

				  <div class="card">
				    <div class="card-header" role="tab" id="headingTwo">
				      <h5 class="mb-0">
				        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
				          Filter <i class="fa fa-plus pull-right"></i>
				        </a>
				      </h5>
				    </div>
				    <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo">
				      <div class="card-block">
								<div class="row" style="padding-bottom: 20px;">
									<div class="col col-md-9 col-sm-9 col-xs-9">
										<h3>Filter by</h3>
										<!-- <form class="form" action="" method="post"> -->
											<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
											<div class="col-xs-4">
												<input type="date" name="start_date" class="form-control datepicker">
											</div>
											<div class="col-xs-4">
												<input type="date" name="end_date" class="form-control datepicker">
											</div>
											<div class="col-xs-2">
												<button type="button" name="button" class="btn btn-primary">Submit</button>
											</div>
										<!-- </form> -->


									</div>
									<div class="col col-md-3 col-sm-3 col-xs-3">
